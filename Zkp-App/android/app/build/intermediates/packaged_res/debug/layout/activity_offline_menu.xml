<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline Identity"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Peer-to-Peer Protocol"
        android:textColor="#00E676"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardQrDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="#1E1E1E"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvQrStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to Transmit"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/imgOfflineQr"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="#333333"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tvFrameCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- / --"
                android:textColor="#00E676"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:visibility="invisible"/> <ProgressBar
                android:id="@+id/loader"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:indeterminateTint="#00E676"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnTransmit"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="ðŸ“¡ TRANSMIT"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF"
            app:cornerRadius="16dp"/>

        <Button
            android:id="@+id/btnVerifyOffline"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ðŸ” VERIFY"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            app:cornerRadius="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>