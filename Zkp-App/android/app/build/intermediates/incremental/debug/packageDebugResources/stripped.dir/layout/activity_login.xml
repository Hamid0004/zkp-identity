<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1A1A1A"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#00E5FF"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¦ Zero Knowledge Login"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.02"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proving Identity without revealing Data"
                android:textSize="14sp"
                android:textColor="#AAAAAA"
                android:gravity="center"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1E1E1E"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dynamic Identity Proof"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp"/>

                <ImageView
                    android:id="@+id/imgDynamicQr"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="fitCenter"
                    android:background="#FFFFFF"
                    android:padding="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <ProgressBar
                        android:id="@+id/loader"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:indeterminateTint="#00E5FF"
                        android:visibility="gone"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to Transmit"
                        android:textSize="14sp"
                        android:textColor="#00E5FF"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnGotoScanner"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ•µï¸ SCAN"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#FF3D00"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                app:cornerRadius="12dp"/>

            <Button
                android:id="@+id/btnTransmit"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ“¡ TRANSMIT"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#00C853"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                app:cornerRadius="12dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by Rust + Plonky2 ðŸ¦"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>