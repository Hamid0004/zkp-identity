<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- PERMISSIONS -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <!-- Network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- NFC -->
    <uses-permission android:name="android.permission.NFC" />
    
    <!-- Vibration for haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Wake Lock - NEW: For OfflineMenuActivity QR transmission -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Storage (for proof/credential caching if needed) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- HARDWARE FEATURES -->
    <!-- ═══════════════════════════════════════════════════════════ -->
    
    <uses-feature 
        android:name="android.hardware.nfc" 
        android:required="true" />
    
    <uses-feature 
        android:name="android.hardware.camera" 
        android:required="true" />
    
    <uses-feature 
        android:name="android.hardware.camera.autofocus" 
        android:required="false" />

    <application
        android:name=".ZkpApplication"
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="ZKP Mobile"
        android:roundIcon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- MAIN ENTRY POINT -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- QR TRANSMISSION & VERIFICATION -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        
        <!-- 
            OfflineMenuActivity: QR Code Transmission
            - Generates ZK proofs via Rust
            - Displays animated QR codes (Fountain strategy)
            - Requires wake lock to keep screen on
        -->
        <activity 
            android:name=".OfflineMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:keepScreenOn="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <!-- 
            VerifierActivity: QR Code Scanner & Proof Verifier
            - Scans chunked QR codes
            - Verifies ZK proofs offline
            - Requires camera permission
        -->
        <activity
            android:name=".VerifierActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- AUTHENTICATION & BIOMETRICS -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        
        <!-- 
            LoginActivity: User authentication
        -->
        <activity 
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- 
            PortraitCaptureActivity: Biometric photo capture
        -->
        <activity
            android:name=".PortraitCaptureActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="orientation|screenSize" />

        <!-- 
            CameraActivity: General camera operations
        -->
        <activity
            android:name=".CameraActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="orientation|screenSize" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- NFC PASSPORT SCANNING -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        
        <!-- 
            PassportActivity: NFC passport reader
            - Reads electronic passports
            - Processes NFC TECH_DISCOVERED intents
        -->
        <activity
            android:name=".PassportActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
        </activity>

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- ERROR HANDLING -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        
        <!-- 
            ErrorActivity: Centralized error display
        -->
        <activity 
            android:name=".ErrorActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:launchMode="singleTop" />

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- SERVICES (Optional - for future background operations) -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        
        <!-- Uncomment if you need background proof generation
        <service
            android:name=".services.ProofGenerationService"
            android:exported="false"
            android:enabled="true" />
        -->

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- CONTENT PROVIDERS (Optional - for secure data sharing) -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        
        <!-- Uncomment if you need file provider for sharing proofs
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        -->

    </application>

</manifest>